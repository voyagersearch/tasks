{
  "name": "mosaic_to_workspace",
  "parent": "mosaic",
  "runner": "python",
  "categories": ["Managing Raster"],
  "constraints": [
    {"geometry_type": "Raster"}
  ],
  "params": [
    {
      "type": "VoyagerResults",
      "name": "input_items",
      "required": true
    },
    {
      "type": "CatalogPath",
      "name": "target_workspace",
      "required": true
    },
    {
      "type": "String",
      "name": "output_dataset_name",
      "required": true
    },
    {
      "type": "Geometry",
      "name": "processing_extent",
      "extentParam": true,
      "initWithResultsExtent": true
    },
    {
      "type": "Projection",
      "name": "output_projection"
    },
    {
      "type": "StringChoice",
      "name": "raster_format",
      "choices": [
        "BIP",
        "BMP",
        "BSQ",
        "DAT",
        "GIF",
        "IMG",
        "JPG",
        "JP2",
        "PNG",
        "TIF",
        "GRID",
        "FileGDB",
        "MosaicDataset"
      ],
      "value": "FileGDB"
    },
    {
      "type": "StringChoice",
      "name": "compression_method",
      "choices": [
        "LZ77",
        "JPEG",
        "JPEG2000",
        "PackBits",
        "LZW",
        "RLE",
        "CCITT_G3",
        "CCITT_G4",
        "CCITT_1D",
        "JPEG_YCbCr",
        "NONE"
      ],
      "advanced":true,
      "value": "LZ77"
    },
    {
      "type": "Integer",
      "name": "compression_quality",
      "advanced":true,
      "value": 75,
      "min": 1,
      "max": 100
    }
  ],
  "display":
  {
    "en":
    {
      "display": "Mosaic to Workspace",
      "description": "Mosaic input rasters to a new dataset in an existing workspace",
      "helpURL": "https://help.voyagersearch.com/doc-203514833-mosaic-to-workspace",
      "params": {
        "target_workspace": {
          "display": "Target Workspace",
          "description": "The existing geodatabase or folder where the new output dataset is to be created. When using output formats, FileGDB and MosaicDataset, the target must be a Geodatabase."
        },
        "output_dataset_name": {
          "display": "Output Dataset Name",
          "description": "The name of the output dataset."
        }
      }
    }
  }
}
